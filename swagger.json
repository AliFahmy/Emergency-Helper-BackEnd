{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Emergency Helper API",
        "description":"this is a Restful API provided for the client side of the Emergency Helper Application"
    },
    "tags": [
        {
            "name": "Account",
            "description": "API for Accounts in the system"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "components": {
        "securitySchemes": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        }
      },
      "security": [{
        "bearerAuth": []
      }],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/Account/Login": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "Gets A Token for user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Account"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "content":{
                            "application/json":{
                                "schema": {
                                    "$ref": "#/definitions/Token"
                                }
                            }
                        }
                    },
                    "400": {
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Login Failed"
                                }
                            }
                    }
                }
            }
        }
        },

        "/api/Account/RegisterUser": {
                "post": {
                    "tags": [
                        "Account"
                    ],
                    "summary": "Registers Client to the database",
                    "requestBody": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/AccountRegistration"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {

                            "content":{
                                "application/json":{

                                    "schema": {
                                        "$ref": "#/definitions/Token"
                                    }
                                }
                            }
                        },
                        "404": {
                            "content":{
                                "text/plain": {
                                    "schema":{
                                        "type": "string",
                                        "example":"Registration Failed"
                                    }
                                }
                        }
                    }
                }
            }
        },

        "/api/Account":{
                "get":{
                    "tags":["Account"],
                    "summary":"Gets all the data of the currently logged in user",
                    "responses":{
                        "200":{
                            "content":{
                                "application/json": {
                                    "schema":{
                                        "$ref": "#/definitions/AccountInformation"
                                    }
                                }
                            }
                    },
                    "404": {
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Failed To Get Account"
                                }
                            }
                        }
                    }
                }
            },
                "put":{
                    "tags":["Account"],
                    "summary":"Updates the currently logged in user",
                    "requestBody": {

                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/AccountUpdate"
                                }
                            }
                        }
                    },
                    "responses":{
                        "200":{

                            "content":{
                                "text/plain": {
                                    "schema":{
                                        "type": "string",
                                        "example":"Updated Successfully"
                                    }
                                }
                            }
                        },
                        "500":{
                            "content":{
                                "text/plain": {
                                    "schema":{
                                        "type": "string",
                                        "example":"Failed To Update"
                                    }
                                }
                            }
                        }
                    }
                }
        },

        "/api/Account/ChangePassword":{
            "put":{
                "tags":["Account"],
                "summary":"Updates the password of the currently logged in user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ChangePassword"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Updated Successfully"
                                }
                            }
                        }
                    },
                    "400": {
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Failed To Change Password"
                                }
                            }
                        }
                      }
                }
            }
        },

        "/api/Account/Picture":{
            "get":{
                "tags":["Account"],
                "summary":"Gets A buffer of the profile picture",
                "responses":{
                    "200":{
                        "content":{
                            "text/plain":{
                                "schema":{
                                    "type":"string",
                                    "example": "Picture"
                                }
                            }
                        }
                },
                "404": {
                    "content":{
                        "text/plain": {
                            "schema":{
                                "type": "string",
                                "example":"Failed To Get Account"
                            }
                        }
                    }
                }
            }
            },
            "put":{
                "tags":["Account"],
                "summary":"Changes the picture of the currently logged in user",
                "requestBody": {
                    "description": "multipart/form-data value.",
                    "content": {
                        "multipart/form-data": {
                            "x-parser":"stream",
                            "schema": {
                                "type":"object",
                                "properties":{
                                    "picture":{
                                        "type":"string",
                                        "format":"binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "A Updated User Object",
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Updated Successfully"
                                }
                            }
                        }
                    },
                    "400": {
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Failed to add picture"
                                }
                            }
                        }
                      }

                }
            }
        }
    },
    "definitions": {
        "Token": {
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "Account": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "AccountUpdate":{
            "type":"object",
            "properties":{
                "email": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                },
                "nationality": {
                    "type": "string"
                }
            }
        },
        "AccountRegistration":{
            "type":"object",
            "properties":{
                "name":{
                   "type":"object",
                   "properties":{
                       "firstName":{
                           "type":"string"
                       },
                       "lastName":{
                           "type":"string"
                       }
                   }
                },
                "mobile":{
                    "type":"string"
                },
                "email":{
                    "type":"string"
                },
                "password":{
                    "type":"string"
                },
                "userRole":{
                    "type":"number"
                }
            }
        },
        "AccountInformation":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"object",
                    "properties":{
                        "firstName":{
                            "type":"string"
                        },
                        "lastName":{
                            "type":"string"
                        }
                    }
                },
                "role":{
                    "type":"string"
                },
                "email":{
                    "type":"string"
                },
                "gender":{
                    "type":"string"
                },
                "mobile":{
                    "type":"string"
                },
                "nationality":{
                    "type":"string"
                }
            }
        },
        "ChangePassword":{
            "properties":{
                "oldPassword":{
                    "type":"string"
                },
                "newPassword":{
                    "type":"string"
                }
            }
        }
    }
}
