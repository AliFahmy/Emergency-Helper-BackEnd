        "/api/Account/ValidateToken":{
            "get":{
                "tags":["Account"],
                "summary":"Validates Token in authorization header",
                "responses":{
                    "200":{
                        "content":{
                            "application/json": {
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "result":{
                                            "type":"boolean",
                                            "example":true
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401":{
                        "content":{
                            "application/json": {
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "result":{
                                            "type":"boolean",
                                            "example":false
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/Account/ChangePassword":{
            "patch":{
                "tags":["Account"],
                "summary":"Updates the password of the currently logged in user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ChangePassword"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Password Changed",
                        "content":{
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example":"Password Updated Successfully"
                                }
                            }
                        }
                    },
                    "409": {
                        "description":"Old Password Dosent Match",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                      },
                      "500": {
                        "description":"Server Error",
                        "content":{
                            "application/json":{
                                "schema": {
                                    "$ref": "#/definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },

        
